<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nagarnigam"

    >
    <ImageView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:src="@drawable/header2"/>
    <TextView
        android:layout_weight="1"
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="#0000ff"
        android:text="There are different area zone.You can take information of each  zone by clicking on the area zone."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_weight="1"
        android:id="@+id/zone1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:background="@drawable/selector"
        android:text="Zone Area 1st"/>
    <Button
        android:layout_weight="1"
        android:id="@+id/zone2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@drawable/selector"
        android:text="Zone Area 2nd"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_weight="1"
        android:id="@+id/zone3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@drawable/selector"
        android:text="Zone Area 3rd"/>
    <Button
        android:layout_weight="1"
        android:id="@+id/zone4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@drawable/selector"
        android:text="Zone Area 4th"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_weight="1"
        android:id="@+id/zone5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@drawable/selector"
        android:text="Zone Area 5th"/>
    <Button
        android:layout_weight="1"
        android:id="@+id/zone6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@drawable/selector"
        android:text="Zone Area 6th"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_weight="1"
        android:id="@+id/zone7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@drawable/selector"
        android:text="Zone Area 7th"/>
    <Button
        android:layout_weight="1"
        android:id="@+id/zone8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@drawable/selector"
        android:layout_margin="5dp"
        android:text="Zone Area 8th"/>
        </LinearLayout>
    <Button
        android:layout_weight="0.70"
        android:id="@+id/about_municipal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@drawable/selector"
        android:text="Municipal Corporation"/>
